<div class='container'> 
  <h1>Available Destinations</h1>
  <br>
  <%= search_form_for @q, url: journey_list_path do |form| %>
    <div class="form-group">
      <%= form.label :from%>
      <%= form.text_field :from_cont, class:"form-control"%>
    </div>

    <div class="form-group">
      <%= form.label :to%>
      <%= form.text_field :to_cont, class:"form-control"%>
    </div>

    <div class="form-group">
      <%= form.label :capacity%>
      <%= form.text_field :capacity, class:"form-control", min: 1 %>
    </div><br>

    <div class="form-group">
      <%= form.submit class:"btn btn-primary btn-lg"%>
    </div><br>
  <%end%>
  <div style="text-align: right;">
    <%= link_to 'Make an Order',new_order_path, class: 'btn btn-danger'%> 
  </div> 
  <br>
  <table>
    <thead>
      <table class="w3-table-all">
        <tr class="w3-light-grey w3-hover-grey">
          <th>Taveler</th>
          <th>From</th>
          <th>To</th>
          <th>Departure</th>
          <th>Capacity</th>
          <th>Rate</th>
        </tr>
    </thead>
    <tbody>
      <% @journeys.each do |journey| %>
        <tr class="w3-hover-white">
          <td><%= journey.user.first_name %></td>
          <td> <strong><%= journey.from %> </strong></td>
          <td> <strong><%= journey.to%> </strong></td>
          <td> <%= journey.departure %> </td>
          <td> <strong><%= journey.capacity %></strong> </td>
          <td> <strong><%= journey.rate %> </strong></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>